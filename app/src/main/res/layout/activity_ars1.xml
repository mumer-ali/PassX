<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#574B60"
    tools:context=".ARS_1">


    <EditText
        android:id="@+id/text_of_email"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="515dp"
        android:background="#574B60"
        android:ems="10"
        android:enabled="false"
        android:inputType="text"
        android:shadowColor="#F7F7F9"
        android:text="Enter the OTP we have sent to"
        android:textColor="#C0C5C1"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/otp_field"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="365dp"
        android:background="#574B60"
        android:ems="10"
        android:inputType="number"
        android:textColor="#EAF0CE"
        android:textSize="25sp" />

    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="97dp"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="205dp"
        android:onClick="ok"
        android:text="Next"
        android:textColor="#EAF0CE"
        android:textSize="24sp"
        app:backgroundTint="#7D8491"
        tools:ignore="UsingOnClickInXml" />

    <TextView
        android:id="@+id/users_email"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="472dp"
        android:text=""
        android:textColor="#C0C5C1"
        android:textSize="22sp"
        android:textStyle="bold|italic" />

</RelativeLayout>