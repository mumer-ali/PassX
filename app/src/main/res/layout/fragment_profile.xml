<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nam"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#574B60"
    tools:context=".SettingsFragment">

    <LinearLayout
        android:layout_width="317dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/profile_frame"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="#EAF0CE"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:src="@drawable/baseline_dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:paddingLeft="15dp"
                android:text="Your Name Here"
                android:textColor="#574B60"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:paddingLeft="15dp"
                android:text="youremail@passx.com"
                android:textColor="#574B60"
                android:textSize="24sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/contact_us"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Contact Us"
                android:textColor="#EAF0CE"
                android:textSize="22sp"
                app:chipBackgroundColor="#7D8491" />

            <com.google.android.material.chip.Chip
                android:id="@+id/about_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textColor="#EAF0CE"
                android:textSize="22sp"
                app:chipBackgroundColor="#7D8491" />

            <com.google.android.material.chip.Chip
                android:id="@+id/rate_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rate Us"
                android:textColor="#EAF0CE"
                android:textSize="22sp"
                app:chipBackgroundColor="#7D8491" />

            <com.google.android.material.chip.Chip
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share"
                android:textColor="#EAF0CE"
                android:textSize="22sp"
                app:chipBackgroundColor="#7D8491" />

            <com.google.android.material.chip.Chip
                android:id="@+id/help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Help"
                android:textColor="#EAF0CE"
                android:textSize="22sp"
                app:chipBackgroundColor="#7D8491" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>