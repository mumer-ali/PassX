<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#574B60"
    android:onClick="submit"
    tools:context=".Register">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="566dp"
        android:fontFamily="@font/b612"
        android:text="Register"
        android:textColor="#C0C5C1"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/first_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="442dp"
        android:background="#574B60"
        android:ems="10"
        android:hint="First Name"
        android:inputType="text"
        android:textColor="#EAF0CE"
        android:textColorHint="#EAF0CE"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/last_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="382dp"
        android:background="#574B60"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="text"
        android:textColor="#EAF0CE"
        android:textColorHint="#EAF0CE"
        android:textSize="24sp" />

    <Button
        android:id="@+id/onc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="97dp"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="215dp"
        android:onClick="submit"
        android:text="Next"
        android:textColor="#EAF0CE"
        android:textSize="24sp"
        app:backgroundTint="#7D8491" />


    <EditText
        android:id="@+id/email"
        android:layout_width="256dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="321dp"
        android:background="#574B60"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:textColor="#EAF0CE"
        android:textColorHint="#EAF0CE"
        android:textSize="24sp" />


</RelativeLayout>